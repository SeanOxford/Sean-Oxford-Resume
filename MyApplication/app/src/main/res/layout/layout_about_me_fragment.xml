<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout_about_me_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/FrameLayout_info_fragment_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImageView_about_me_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mountain" />

        <View
            android:id="@+id/View_about_me_fade_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#bb125A91" />


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/LinearLayout_info_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/base_margin"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/RelativeLayout_about_me_title_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0">

                <TextView
                    android:id="@+id/TextView_about_me_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/about_me_fragment_main_title"
                    android:textColor="@color/info_fragment_text"
                    android:textSize="@dimen/about_me_fragment_title_text_size" />

                <LinearLayout
                    android:id="@+id/LinearLayout_about_me_android_dev"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextView_about_me_title"
                    android:layout_alignRight="@+id/TextView_about_me_title"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-8dp"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/TextView_about_me_android"
                        android:layout_width="wrap_content"
                        android:layout_height="18.25dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/android"
                        android:textColor="@color/info_fragment_text"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/TextView_about_me_developer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="-0.55dp"
                        android:includeFontPadding="false"
                        android:text="@string/about_me_fragment_developer"
                        android:textColor="@color/info_fragment_text"
                        android:textSize="22dp" />

                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/TextView_about_me_location_title"
                style="@style/info_fragment_title_style"
                android:text="@string/about_me_fragment_location_title" />

            <TextView
                android:id="@+id/TextView_about_me_location"
                style="@style/info_fragment_desc_style"
                android:text="@string/about_me_fragment_location" />

            <TextView
                android:id="@+id/TextView_about_me_interests_title"
                style="@style/info_fragment_title_style"
                android:text="@string/about_me_fragment_interests_title" />

            <TextView
                android:id="@+id/TextView_about_me_interests"
                style="@style/info_fragment_desc_style"
                android:text="@string/about_me_fragment_interests" />

            <TextView
                android:id="@+id/TextView_about_me_email_title"
                style="@style/info_fragment_title_style"
                android:text="@string/about_me_fragment_email_title" />

            <TextView
                android:id="@+id/TextView_about_me_email"
                style="@style/info_fragment_desc_style"
                android:text="@string/email_address" />

            <TextView
                android:id="@+id/TextView_about_me_phone_number_title"
                style="@style/info_fragment_title_style"

                android:text="@string/about_me_fragment_phone_title" />

            <TextView
                android:id="@+id/TextView_about_me_phone_number"
                style="@style/info_fragment_desc_style"
                android:text="@string/phone_number" />


            <TextView
                android:id="@+id/TextView_about_me_linkedin_title"
                style="@style/info_fragment_title_style"
                android:text="@string/about_me_fragment_linkedin_title" />

            <ImageView
                android:id="@+id/ImageView_about_me_linkedin"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginBottom="@dimen/base_margin"
                android:alpha="0"
                android:src="@drawable/linked_in_button" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>