<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/RelativeLayout_about_me_root">


    <FrameLayout
        android:id="@+id/FrameLayout_about_me_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImageView_about_me_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mountain" />

        <View
            android:id="@+id/View_about_me_fade_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#bb125A91" />


    </FrameLayout>


    <LinearLayout
        android:id="@+id/LinearLayout_about_me_text_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/base_margin"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">


        <RelativeLayout
            android:id="@+id/RelativeLayout_about_me_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0">

            <TextView
                android:id="@+id/TextView_about_me_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Sean Oxford"
                android:textColor="@color/about_me_text"
                android:textSize="@dimen/about_me_fragment_title_text_size" />

            <LinearLayout
                android:id="@+id/LinearLayout_about_me_android_dev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView_about_me_title"
                android:layout_alignRight="@+id/TextView_about_me_title"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="-8dp"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/TextView_about_me_android"
                    android:layout_width="wrap_content"
                    android:layout_height="18.25dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/android"
                    android:tint="#FFFFFF"
                    android:textColor="@color/about_me_text" />

                <TextView
                    android:id="@+id/TextView_about_me_developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="-0.55dp"
                    android:includeFontPadding="false"
                    android:text="Developer"
                    android:textColor="@color/about_me_text"
                    android:textSize="22dp" />

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/LinearLayout_about_me_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/TextView_about_me_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textColor="@color/about_me_text"
                android:alpha="0"
                android:textSize="@dimen/about_me_fragment_subtitle_text_size" />

            <TextView
                android:id="@+id/TextView_about_me_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="San Francisco, CA"
                android:textColor="@color/about_me_text"
                android:layout_marginBottom="@dimen/half_margin"
                android:alpha="0"
                android:textSize="@dimen/about_me_fragment_text_size" />

            <TextView
                android:id="@+id/TextView_about_me_interests_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interests:"
                android:textColor="@color/about_me_text"
                android:alpha="0"
                android:textSize="@dimen/about_me_fragment_subtitle_text_size" />

            <TextView
                android:id="@+id/TextView_about_me_interests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0"
                android:text=" \u2022Making celtic music electronically\n
\u2022Making electronic music acoustically\n
\u2022Androidery\n
\u2022Vidya games\n
\u2022Online Star Wars debates
"
                android:layout_marginBottom="@dimen/half_margin"
                android:textColor="@color/about_me_text"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/TextView_about_me_email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:alpha="0"
                android:textColor="@color/about_me_text"
                android:textSize="@dimen/about_me_fragment_subtitle_text_size" />

            <TextView
                android:id="@+id/TextView_about_me_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="oxford.sean@gmail.com"
                android:textColor="@color/about_me_text"
                android:alpha="0"
                android:layout_marginBottom="@dimen/half_margin"
                android:textSize="@dimen/about_me_fragment_text_size" />

            <TextView
                android:id="@+id/TextView_about_me_phone_number_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                android:textColor="@color/about_me_text"
                android:alpha="0"
                android:textSize="@dimen/about_me_fragment_subtitle_text_size" />

            <TextView
                android:id="@+id/TextView_about_me_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(760) 504-7920"
                android:layout_marginBottom="@dimen/half_margin"
                android:textColor="@color/about_me_text"
                android:alpha="0"
                android:textSize="@dimen/about_me_fragment_text_size" />


            <TextView
                android:id="@+id/TextView_about_me_linkedin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LinkedIn:"
                android:textColor="@color/about_me_text"
                android:alpha="0"
                android:textSize="@dimen/about_me_fragment_subtitle_text_size" />

            <TextView
                android:id="@+id/TextView_about_me_linkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://www.linkedin.com/in/sean-oxford-943427103"
                android:alpha="0"
                android:textColor="@color/about_me_text"
                android:textSize="@dimen/about_me_fragment_text_size" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>